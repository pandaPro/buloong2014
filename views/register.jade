extends layout

block css
    link(rel='stylesheet', href='/stylesheets/signin.css')

block js
    script(src='/javascripts/ui-bootstrap-tpls-0.11.0.min.js')
    script(src='/javascripts/app.js')
    script(src='/javascripts/controllers/user.js')
    script(src='/javascripts/services/baseService.js')
    script(src='/javascripts/services/authenticationService.js')

block content
    div.container(ng-controller="userController")
        .form-group
              form(action='/user/signup', method='post' name="SignUpForm")
                .form-group
                  label Username
                  input.form-control(type='text', name='username' ng-model='user.username' required)
                .form-group
                  label Password
                  input.form-control(type='password', name='password' ng-model='user.password' required)
                button.btn.btn-warning.btn-lg(type='submit' ng-disable="SignUpForm.$invalid") Signup
